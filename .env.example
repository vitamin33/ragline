# RAGline Configuration
PROJECT_NAME=ragline
ENVIRONMENT=development

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/ragline
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# Redis
REDIS_URL=redis://localhost:6379
REDIS_CACHE_DB=0
REDIS_STREAMS_DB=1
REDIS_CELERY_DB=2

# Auth
JWT_SECRET=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24

# LLM Configuration
OPENAI_API_KEY=your-key-or-local
OPENAI_API_BASE=http://localhost:11434/v1  # Ollama local
LLM_MODEL=llama2
LLM_MAX_TOKENS=1000
LLM_TEMPERATURE=0.7

# Celery
CELERY_BROKER_URL=redis://localhost:6379/2
CELERY_RESULT_BACKEND=redis://localhost:6379/3
CELERY_TASK_TIME_LIMIT=300

# Observability
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
JAEGER_PORT=16686
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831

# Feature Flags
ENABLE_LLM=true
ENABLE_RAG=true
ENABLE_VOICE=false
