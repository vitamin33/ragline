{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["event", "version", "tenant_id", "order_id", "status", "ts"],
  "properties": {
    "event": {
      "type": "string",
      "enum": ["order_status"]
    },
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+$"
    },
    "tenant_id": {
      "type": "string",
      "format": "uuid"
    },
    "order_id": {
      "type": "string",
      "format": "uuid"
    },
    "status": {
      "type": "string",
      "enum": ["created", "confirmed", "failed"]
    },
    "ts": {
      "type": "string",
      "format": "date-time"
    },
    "meta": {
      "type": "object",
      "properties": {
        "reason": {
          "type": "string"
        }
      }
    }
  }
}
