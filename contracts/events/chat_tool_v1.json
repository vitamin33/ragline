{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["event", "version", "tool", "args", "latency_ms", "ts"],
  "properties": {
    "event": {
      "type": "string",
      "enum": ["tool_call"]
    },
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+$"
    },
    "tool": {
      "type": "string",
      "enum": ["retrieve_menu", "apply_promos", "confirm"]
    },
    "args": {
      "type": "object",
      "properties": {
        "sku": {
          "type": "string"
        }
      }
    },
    "latency_ms": {
      "type": "number",
      "minimum": 0
    },
    "ts": {
      "type": "string",
      "format": "date-time"
    }
  }
}
