{
  "dashboard": {
    "id": null,
    "title": "RAGline System Metrics",
    "tags": ["ragline", "monitoring"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Outbox Events Processing Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(ragline_outbox_events_processed_total[5m])",
            "legendFormat": "{{aggregate_type}} events/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "DLQ Events by Status",
        "type": "piechart",
        "targets": [
          {
            "expr": "ragline_dlq_events_total",
            "legendFormat": "{{status}}"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "Circuit Breaker States",
        "type": "stat",
        "targets": [
          {
            "expr": "ragline_circuit_breaker_state",
            "legendFormat": "{{breaker_name}}"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0}
      },
      {
        "id": 4,
        "title": "Task Execution Duration",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(ragline_task_duration_seconds_bucket[5m]))",
            "legendFormat": "95th percentile"
          },
          {
            "expr": "histogram_quantile(0.50, rate(ragline_task_duration_seconds_bucket[5m]))",
            "legendFormat": "50th percentile"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 5,
        "title": "Error Rate by Component",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(ragline_errors_total[5m])",
            "legendFormat": "{{component}} - {{error_type}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "10s"
  }
}
